<h1>Password Recovery</h1>

	
<p>Please enter your email address to reset the password.</p>
<% form_for(@user, '/sessions/reset') do |f| %>
  <%= f.label :email %>
 	<%= f.text_field :email %>

	<hr/>
  <%= f.submit "Send password reset email", :class => "btn btn-primary" %>
  <%= link_to 'Cancel', url_for(:sessions, :login), :class => "btn btn-secondary" %>
<% end %>