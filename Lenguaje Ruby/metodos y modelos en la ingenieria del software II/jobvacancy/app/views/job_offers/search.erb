<table>
	<tr>
		<th>Title</th>
		<th>Location</th>
		<th>Required Experience</th>
		<th>Description</th>
		<th>Actions</th>
	</tr>
	<% @offers.each do | offer| %>

	<tr>
		<td>
			<%= offer.title %>
		</td>
		<td>
			<%= offer.location %>
		</td>
		<td>
			<%=
			required_experience_to_show = if offer.required_experience == 0
										    'Not specified'
										  else
										    offer.required_experience
										  end
			%>
		</td>
		<td>
			<%= offer.description %>
		</td>		
		<td>
			<%= link_to 'Apply', url_for(:job_offers, :apply, :offer_id => offer.id) %>
		</td>		
	</tr>

  <% end %>

</table>