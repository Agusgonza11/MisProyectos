<h1>Login</h1>
<% form_for(@user, '/sessions/create') do |f| %>
	<%= f.label :email %>
 	<%= f.text_field :email %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <br/>
  <%= f.submit "Login", :id => 'loginButton', :class => "btn btn-primary" %>
	<%= link_to 'Recover Password', url_for(:sessions, :reset), :class => "btn btn-secondary" %>
<% end %>